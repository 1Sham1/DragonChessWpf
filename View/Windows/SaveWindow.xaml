<Window x:Class="DragonChessKurs.View.Windows.SaveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Сохранение игры" Height="200" Width="200"
         WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="button" Content="Сохранить" HorizontalAlignment="Center" Click="Save_Click" Margin="0,122,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="SaveNametextBox" HorizontalAlignment="Center" Margin="0,52,0,0" TextWrapping="Wrap" Text=""  VerticalAlignment="Top" Width="180"/>
        <Label x:Name="label" Content="Введите название сохранения" HorizontalAlignment="Left" Margin="10,26,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
